&НаКлиенте
Процедура ВводЧислаЗавершено(РезультатЗакрытия, ДополнительныеПараметры) Экспорт
	
	Если РезультатЗакрытия = Неопределено Тогда
		Возврат;	
	КонецЕсли;
	
	ВводЧислаЗавершеноНаСервере(РезультатЗакрытия); 		
	ОбновитьНадписьСечения();	
	РасчитатьОбъемКоличество(); 
	
	Если ЭтаФорма.ТекущийЭлемент.Имя = "НомерПакета" Тогда 
		Элементы.СписокПодобныхСерийныхНомеров.Обновить();
		Если Элементы.СписокПодобныхСерийныхНомеров.ТекущиеДанные = Неопределено Тогда
			Сообщить("Пакет не найден!");
			Возврат;
		КонецЕсли;
		ЗаполнитьЗначенияСвойств(Объект, Элементы.СписокПодобныхСерийныхНомеров.ТекущиеДанные);
	КонецЕсли;
	
КонецПроцедуры

Процедура ВводЧислаЗавершеноНаСервере(РезультатЗакрытия)	
	Выполнить(ЭтаФорма.ТекущийЭлемент.ПутьКДанным + " = " + СтрЗаменить(СтрЗаменить(Строка(РезультатЗакрытия),",", "."), Символы.НПП, "")); 
	
	Если ЭтаФорма.ТекущийЭлемент.ПутьКДанным = "НомерПакета" Тогда 
		НомерПакетаИзменениеТекстаРедактированияНаСервере(РезультатЗакрытия)
	Иначе	
		ПолучитьХарактеристику();
	КонецЕсли;
КонецПроцедуры

